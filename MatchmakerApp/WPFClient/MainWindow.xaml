<Window
        x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" 
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="0.5"/>
                <GradientStop Color="Black" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label x:Name="loginLabelUserName" Height="25" HorizontalAlignment="Left" Margin="101,91,0,0" VerticalAlignment="Top" Width="70" Content="User Name:"/>
        <TextBox x:Name="loginTxtBoxUserName" Height="23" Margin="191,91,142,0" VerticalAlignment="Top" />
        <Label x:Name="loginLabelIP"  HorizontalAlignment="Left" Margin="101,132,0,156"  Width="70" Content="Service IP:"/>
        <TextBox x:Name="loginTxtBoxIP" Margin="191,134,142,0" Text="10.2.20.28" Height="23" VerticalAlignment="Top" />
        <Button x:Name="loginButtonConnect"  Background="Transparent" Margin="204,0,152,105" Click="buttonConnect_Click"  Height="23" VerticalAlignment="Bottom" Content="Connect"/>


    </Grid>
</Window>
